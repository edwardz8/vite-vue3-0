{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "baseUrl": ".",
    "jsx": "preserve",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["axios", "node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
    }
  },
  "exclude": [
    "**/dist/**",
    "env.d.ts"
  ],
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"] 
}
